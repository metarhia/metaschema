{
  "name": "metaschema",
  "version": "0.1.0",
  "author": "Timur Shemsedinov <timur.shemsedinov@gmail.com>",
  "description": "Metadata Schema and Interface Definition Language (IDL)",
  "license": "MIT",
  "keywords": [
    "interface",
    "definition",
    "metarhia",
    "idl",
    "dsl",
    "schema",
    "metadata"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/metarhia/metaschema"
  },
  "main": "./metaschema.js",
  "browser": {
    "./metaschema.js": "./dist/metaschema.js",
    "./dist/lib/schema-fs-loader.js": false
  },
  "readmeFilename": "README.md",
  "files": [
    "babel.config.js",
    "metaschema.js",
    "bin/",
    "lib/",
    "dist/",
    "schemas/"
  ],
  "scripts": {
    "test": "npm run lint && metatests test/",
    "lint": "eslint --ignore-path .gitignore . && prettier -c \"**/*.js\" \"**/*.json\" \"**/*.md\" \".*rc\" \"**/*.yml\"",
    "fmt": "prettier --write \"**/*.js\" \"**/*.json\" \"**/*.md\" \".*rc\" \"**/*.yml\"",
    "build": "babel metaschema.js -d dist && babel lib -d dist/lib",
    "prepublish": "npm run -s build"
  },
  "engines": {
    "node": ">=8.6.0"
  },
  "dependencies": {
    "@metarhia/common": "^1.2.1",
    "metasync": "^0.3.31"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "eslint": "^5.10.0",
    "eslint-config-metarhia": "^6.1.0",
    "eslint-config-prettier": "^3.4.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.1",
    "metatests": "^0.3.0",
    "prettier": "1.16.x"
  }
}
